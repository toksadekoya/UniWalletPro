{
  "name": "uniwalletpro",
  "version": "2.0.0",
  "description": "Budget management for students",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "open index.html",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --config jest.config.mjs",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --config jest.config.mjs",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/unit --config jest.config.mjs",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/integration --config jest.config.mjs",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/e2e --config jest.config.mjs",
    "test:performance": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/performance --config jest.config.mjs",
    "test:security": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/security --config jest.config.mjs",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --ci --reporters=default --reporters=jest-junit --config jest.config.mjs"
  },
  "keywords": [
    "budget",
    "finance",
    "student",
    "tracking"
  ],
  "author": "Adetokunbo Adekoya",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toksadekoya/UniWalletPro.git"
  },
  "bugs": {
    "url": "https://github.com/toksadekoya/UniWalletPro/issues"
  },
  "homepage": "https://github.com/toksadekoya/UniWalletPro#readme",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "jest-junit": "^16.0.0",
    "jsdom": "^22.1.0",
    "nyc": "^15.1.0"
  }
}
